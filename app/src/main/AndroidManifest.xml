<?xml version="1.0" encoding="utf-8"?>
<manifest package="lineo.smarteam"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:name="lineo.smarteam.MyApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name="lineo.smarteam.activity.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        <activity
            android:name="lineo.smarteam.activity.StartActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/StartTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        <activity
            android:name="lineo.smarteam.activity.SettingsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/MainTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lineo.smarteam.activity.StartActivity" />
        </activity>
        <activity
            android:name="lineo.smarteam.activity.TeamActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/MainTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lineo.smarteam.activity.StartActivity" />
        </activity>
        <activity
            android:name="lineo.smarteam.activity.ResultsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/MainTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lineo.smarteam.activity.TeamActivity" />
        </activity>
        <activity
            android:name="lineo.smarteam.activity.EditActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/MainTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lineo.smarteam.activity.TeamActivity" />
        </activity>
        <activity
            android:name="lineo.smarteam.activity.RankingActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/MainTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lineo.smarteam.activity.TeamActivity" />
        </activity>
    </application>

</manifest>
