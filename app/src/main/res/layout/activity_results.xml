<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
               xmlns:tools="http://schemas.android.com/tools"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:gravity="center_vertical"
               android:background="@color/default_background"
               tools:context=".activity.StartActivity">
    <Button
        android:id="@+id/results_button_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/start_activity_button_height"
        android:layout_marginStart="@dimen/start_activity_left_right_margin"
        android:layout_marginEnd="@dimen/start_activity_left_right_margin"
        android:layout_marginBottom="@dimen/start_activity_inter_button_margin"
        android:background="@color/colorGreen"
        android:textColor="@color/colorWhite"
        android:text="@string/buttonResultsAdd"
        android:textSize="@dimen/start_activity_text_size"/>
    <Button
        android:id="@+id/results_button_View"
        android:layout_width="match_parent"
        android:layout_height="@dimen/start_activity_button_height"
        android:layout_marginStart="@dimen/start_activity_left_right_margin"
        android:layout_marginEnd="@dimen/start_activity_left_right_margin"
        android:layout_marginBottom="@dimen/start_activity_inter_button_margin"
        android:background="@color/colorGreen"
        android:textColor="@color/colorWhite"
        android:text="@string/buttonResultsView"
        android:textSize="@dimen/start_activity_text_size"/>
    <Button
        android:id="@+id/results_button_Edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/start_activity_button_height"
        android:layout_marginStart="@dimen/start_activity_left_right_margin"
        android:layout_marginEnd="@dimen/start_activity_left_right_margin"
        android:layout_marginBottom="@dimen/start_activity_inter_button_margin"
        android:background="@color/colorGreen"
        android:textColor="@color/colorWhite"
        android:text="@string/buttonResultsEdit"
        android:textSize="@dimen/start_activity_text_size"/>
    <Button
        android:id="@+id/results_button_delete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/start_activity_button_height"
        android:layout_marginStart="@dimen/start_activity_left_right_margin"
        android:layout_marginEnd="@dimen/start_activity_left_right_margin"
        android:background="@color/colorGreen"
        android:textColor="@color/colorWhite"
        android:text="@string/buttonResultsDelete"
        android:textSize="@dimen/start_activity_text_size"/>
</LinearLayout >
