<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/ranking_margins"
              android:paddingRight="@dimen/ranking_margins">

    <TextView android:id="@+id/ranking_position"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:padding="@dimen/ranking_margins"
              android:gravity="center_horizontal|center_vertical"
              android:background="@color/primaryLightColor"
              android:textColor="@color/colorWhite"
              android:maxLines="1"
              android:textSize="@dimen/ranking_line_text_size"/>
    <TextView android:id="@+id/ranking_name"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="5"
              android:padding="@dimen/ranking_margins"
              android:layout_marginStart="@dimen/ranking_margins"
              android:gravity="center_horizontal|center_vertical"
              android:background="@color/primaryLightColor"
              android:textColor="@color/colorWhite"
              android:maxLines="1"
              android:textSize="@dimen/ranking_line_text_size"/>
    <TextView android:id="@+id/ranking_games"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:padding="@dimen/ranking_margins"
              android:layout_marginStart="@dimen/ranking_margins"
              android:gravity="center_horizontal|center_vertical"
              android:background="@color/primaryLightColor"
              android:textColor="@color/colorWhite"
              android:maxLines="1"
              android:textSize="@dimen/ranking_line_text_size"/>
    <TextView android:id="@+id/ranking_score"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:padding="@dimen/ranking_margins"
              android:layout_marginStart="@dimen/ranking_margins"
              android:gravity="center_horizontal|center_vertical"
              android:background="@color/primaryLightColor"
              android:textColor="@color/colorWhite"
              android:maxLines="1"
              android:textSize="@dimen/ranking_line_text_size"/>
</LinearLayout>