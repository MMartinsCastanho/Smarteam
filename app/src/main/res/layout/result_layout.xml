<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView android:id="@+id/result_layout_matchday"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/ranking_margins"
              android:gravity="center_horizontal|center_vertical"
              android:maxLines="1"
              android:textSize="@dimen/ranking_line_text_size"/>
    <TextView android:id="@+id/result_layout_date"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/ranking_margins"
              android:gravity="center_horizontal|center_vertical"
              android:maxLines="1"
              android:textSize="@dimen/ranking_line_text_size"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:id="@+id/result_layout_win"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:padding="@dimen/ranking_margins"
                  android:gravity="center_horizontal|center_vertical"
                  android:textSize="@dimen/ranking_line_text_size"/>
        <TextView android:id="@+id/result_layout_draw"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:padding="@dimen/ranking_margins"
                  android:gravity="center_horizontal|center_vertical"
                  android:textSize="@dimen/ranking_line_text_size"/>
        <TextView android:id="@+id/result_layout_defeat"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:padding="@dimen/ranking_margins"
                  android:gravity="center_horizontal|center_vertical"
                  android:textSize="@dimen/ranking_line_text_size"/>
    </LinearLayout>
</LinearLayout>