<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="0dp"
              android:background="@color/default_background"
              tools:context=".activity.LineupsActivity">
    <ProgressBar
        android:id="@+id/progressBar"
        android:minHeight="20dip"
        android:maxHeight="20dip"
        android:color="@color/secondaryColor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:padding="@dimen/inter_button_margin"
                  android:background="@color/default_background"
                  tools:context=".activity.LineupsActivity">
        <ListView
            android:id="@+id/listViewTeamHome"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:background="@color/primaryLightColor"
            android:layout_marginBottom="@dimen/inter_button_margin">
        </ListView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/lineups_activity_vs"
            android:textColor="@color/colorBlack"
            android:maxLines="1"
            android:textSize="@dimen/ranking_line_text_size"
            android:layout_marginBottom="@dimen/inter_button_margin"/>
        <ListView
            android:id="@+id/listViewTeamAway"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:background="@color/primaryColor">
        </ListView>

    </LinearLayout>
</LinearLayout>