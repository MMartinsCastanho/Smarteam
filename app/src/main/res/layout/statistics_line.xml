<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/ranking_margins">
    <TextView android:id="@+id/statistics_line_header"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/colorGreenDarker"
              android:maxLines="1"
              android:textSize="@dimen/statistics_header_text_size"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="@dimen/statistics_margins">
        <TextView android:id="@+id/statistics_line_player"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="5"
                  android:gravity="center_horizontal|center_vertical"
                  android:background="@color/colorWhite"
                  android:textColor="@color/colorGreenDarker"
                  android:maxLines="1"
                  android:textSize="@dimen/statistics_line_text_size"/>
        <TextView android:id="@+id/statistics_line_value"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:layout_marginStart="@dimen/ranking_margins"
                  android:gravity="center_horizontal|center_vertical"
                  android:background="@color/colorWhite"
                  android:textColor="@color/colorGreenDarker"
                  android:maxLines="1"
                  android:textSize="@dimen/statistics_line_text_size"/>
    </LinearLayout>
</LinearLayout>