<resources>
    <style name="MainTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MainTheme.ActionBar</item>
        <item name="android:textViewStyle">@style/MainTheme.Text</item>
        <item name="android:buttonStyle">@style/MainTheme.Button</item>
    </style>

    <style name="MainTheme.ActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/colorGreenDark</item>
        <item name="android:titleTextStyle">@style/MainTheme.ActionBar.Title</item>
        <item name="android:title">@string/app_name</item>
        <item name="android:displayOptions">useLogo|showHome|showTitle</item>
    </style>

    <style name="MainTheme.ActionBar.Title" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="MainTheme.Button" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainTheme.Text" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
</resources>
